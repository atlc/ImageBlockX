{

  "description": "Add a button to the toolbar to disable loading all images",
  "manifest_version": 2,
  "name": "Image Block X",
  "version": "0.2",
  "homepage_url": "https://github.com/ckuhl/ImageBlockX",
  "icons": {
    "48": "icons/image_blocked-64.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/image-32.png",
    "default_title": "Images are allowed"
  },

  "options_ui": {
	  "page": "options.html",
	  "browser_style": true
  }
}


{

  "description": "Adds browser action icon to toolbar to disable loading all images",
  "manifest_version": 2,
  "name": "Image Block X",
  "version": "0.1",
  "homepage_url": "https://github.com/ckuhl/ImageBlockX",
  "icons": {
    "48": "icons/image_blocked-64.png"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/image-32.png",
    "default_title": "Images are allowed"
  }

}
